{{#extends "base"}}
{{#block "content"}}
<h2>Customers</h2>
<table class="table table-striped table-dark">
    <thead>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Rating</th>
        <th>Company Name</th>
        <th></th>
        <th></th>
    </thead>
    <tbody>
        {{#each customers}}
        <tr>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.rating}}</td>
            <td>{{this.company_name}}</td>
            <td><a href="/customers/edit/{{this.customer_id}}" class="btn btn-warning">Edit</a></td>
            <td><a href="/customers/delete/{{this.customer_id}}" class="btn btn-danger">Delete</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<a href="/customers/create" class="btn btn-primary">Create Customer</a>
{{/block}}

{{/extends}}